{% include '_header.twig' %}

	<div style="">
		{% if record is defined %}
			{% set home = record %}

			<table>
				<tr>
					<td>
						{% if home.title is defined and home.title is not empty %}
		    			    <h1 style="color: white; text-align: left;">{{ home.title }}</h1>
		    			{% endif %}
					</td>
					<td>
						{% if home.teaser is defined and home.teaser is not empty %}
		    			    <h3 style="color: white; text-align: left;">{{ home.teaser }}</h3>
		    			{% endif %}
					</td>
				</tr>
			</table>

		    {% if home.body is defined and home.body is not empty %}
		    	<p>{{home.body}}</p>
		    {% endif %}
		

		{% else %}
		    <p>
		        {{ __('Content for home not found!') }} 
		        {{ __("You should set 'homepage:' in your 'app/config/config.yml' to an existing record. Make sure that the content is published, otherwise it will not be shown.") }}
		    </p>
		{% endif %}
	</div>

{% include '_footer.twig' %}
